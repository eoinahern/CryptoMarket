<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/darkest_grey"
	android:elevation="10dp"
	android:padding="12dp">


	<com.facebook.drawee.view.SimpleDraweeView
		android:id="@+id/favouriteIcon"
		android:layout_width="50dp"
		android:layout_height="50dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />


	<TextView
		android:id="@+id/symbol_txt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:fontFamily="@font/abel"
		android:textColor="@color/colorAccent"
		android:textSize="@dimen/text_header_medium"
		app:layout_constraintStart_toEndOf="@+id/favouriteIcon"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="My Name" />

	<TextView
		android:id="@+id/full_name_txt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:fontFamily="@font/abel"
		android:textColor="@color/colorAccent"
		android:textSize="18sp"
		app:layout_constraintStart_toEndOf="@+id/favouriteIcon"
		app:layout_constraintTop_toBottomOf="@+id/symbol_txt"
		tools:text="booo" />


	<ImageButton
		android:id="@+id/delete_btn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="8dp"
		android:background="@drawable/ic_delete_dark_35dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>