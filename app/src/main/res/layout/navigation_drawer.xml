<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/drawer"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_gravity="left"
	android:background="@color/colorPrimaryDark"
	android:fillViewport="true"
	android:orientation="vertical">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:clickable="true">

		<RelativeLayout
			android:id="@+id/top_view"
			android:layout_width="match_parent"
			android:layout_height="104dp">


			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="18dp"
				android:background="@drawable/ic_icon" />


		</RelativeLayout>

		<LinearLayout
			android:id="@+id/drawerMain"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/top_view"
			android:clickable="true"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/main_txt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="@font/quicksand"
				android:padding="14dp"
				android:text="@string/main"
				android:textColor="@drawable/menu_item_text_selector"
				android:textSize="16dp" />


		</LinearLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_below="@id/drawerMain"
			android:layout_marginLeft="12dp"
			android:layout_marginRight="12dp"
			android:background="@color/light_grey" />


		<LinearLayout
			android:id="@+id/drawerFavourites"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/drawerMain"
			android:clickable="true"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/favourites_txt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="@font/quicksand"
				android:padding="14dp"
				android:text="@string/favourites"
				android:textColor="@drawable/menu_item_text_selector"
				android:textSize="16dp" />


		</LinearLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_below="@id/drawerFavourites"
			android:layout_marginLeft="12dp"
			android:layout_marginRight="12dp"
			android:background="@color/light_grey" />


		<LinearLayout
			android:id="@+id/drawerNews"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/drawerFavourites"
			android:clickable="true"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/news_txt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="@font/quicksand"
				android:padding="14dp"
				android:text="@string/news"
				android:textColor="@drawable/menu_item_text_selector"
				android:textSize="16dp" />


		</LinearLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_below="@id/drawerNews"
			android:layout_marginLeft="12dp"
			android:layout_marginRight="12dp"
			android:background="@color/light_grey" />

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_marginBottom="12dp"
			android:layout_marginLeft="12dp"
			android:orientation="horizontal">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="@font/abel"
				android:text="@string/powered_by"
				android:textColor="@color/dark_gray"
				android:textSize="10dp"
				android:textStyle="bold|italic" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="4dp"
				android:fontFamily="@font/abel"
				android:text="@string/api_addr"
				android:textColor="@color/colorAccent"
				android:textSize="10dp"
				android:textStyle="italic" />

		</LinearLayout>
	</RelativeLayout>


</ScrollView>